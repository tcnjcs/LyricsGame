@model LyricsGame.Models.Music

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<p><font color="red">@ViewBag.Error</font></p>
<p>Please enter a title, artist, and genre. Then select the .mp3 to be uploaded.</p>
@using( Html.BeginForm("Create", "Music", FormMethod.Post, new {id = "frm-music-upload", name = "frm-music-upload", enctype = "multipart/form-data" })){ 
<h3>Title</h3>
    <input type="text" id="title" name="title" value="@ViewBag.SongTitle"/>
    <h3>Artist</h3>
    <input type="text" id="artist" name="artist" value ="@ViewBag.Artist"/>
    <h3>Genre</h3>
    <input type="text" id="genre" name="genre" value ="@ViewBag.Genre"/>


    <p>
	    <input type="file" name="mp3" id="mp3" />
    </p>
    <p>
        <input type="submit" value="Create" />
    </p>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
